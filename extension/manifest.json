{
    "manifest_version": 3,
    "name": "Recipe Modifier",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "downloads"
    ],
    "host_permissions": [
      "http://localhost:8000/*",
      "http://127.0.0.1:8000/*"
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  